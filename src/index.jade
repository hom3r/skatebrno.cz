        header
            h1.header Skate Brno!
            //- h2.header Find sweet skate spots in Brno
        div#map
            
        script(src="libs.min.js")    
        //- script(src="app.js")
        script.
            function initMap() {
                var brno_stred = {lat:49.194749, lng:16.609508}
                var funpark = {lat:49.196835, lng:16.656936}
                var slatina = {lat:49.181990, lng:16.684940}
                var komec = {lat:49.169596, lng:16.624226}
                var stary_komec = {lat:49.178233, lng:16.628310}
                var u_obrany = {lat: 49.226088, lng: 16.661595}
                var map = new google.maps.Map(document.getElementById('map'), {
                  zoom: 12,
                  center: brno_stred
                });
                //- var marker = new google.maps.Marker({
                //-   position: uluru,
                //-   map: map
                //- });
                var obrany_marker = new google.maps.Marker({
                  position: u_obrany,
                  map: map
                });
                var funpark_marker = new google.maps.Marker({
                  position: funpark,
                  map: map
                });
                var slatina_marker = new google.maps.Marker({
                  position: slatina,
                  map: map
                });
                var komec_marker = new google.maps.Marker({
                  position: komec,
                  map: map
                });
                var stary_komec_marker = new google.maps.Marker({
                  position: stary_komec,
                  map: map
                });
            }
          
        script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyANV_0qDd7P-XR7FASV0Y4_BdN6hyt24S8&callback=initMap" async defer)
